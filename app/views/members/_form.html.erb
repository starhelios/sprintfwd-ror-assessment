<%= form_with(model: @member, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, class: 'form-control', placeholder: 'Enter first name', required: true %>
    </div>
    <div class="form-group">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, class: 'form-control', placeholder: 'Enter last name', required: true %>
    </div>
    <div class="form-group">
      <%= form.label :city %>
      <%= form.text_field :city, class: 'form-control', placeholder: 'Enter city' %>
    </div>
    <div class="form-group">
      <%= form.label :state %>
      <%= form.text_field :state, class: 'form-control', placeholder: 'Enter state' %>
    </div>
    <div class="form-group">
      <%= form.label :country %>
      <%= form.text_field :country, class: 'form-control', placeholder: 'Enter country' %>
    </div>
    <div class="form-group">
      <%= form.label :team_id, "Team" %>
      <%= form.collection_select :team_id, Team.all, :id, :name, { prompt: "Select a team" }, { class: 'form-control' } %>
    </div>
   
    <div clsss="d-flex">
      <%= form.submit "Create Member", class: 'btn btn-primary mt-3' %>
      <%= link_to "Cancel", members_path, class: 'btn btn-secondary mt-3' %>
    </div>
  <% end %>