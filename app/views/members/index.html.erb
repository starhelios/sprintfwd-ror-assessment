<div class="container">
  <h1>Members</h1>
  <table class="table">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @members.each do |member| %>
        <tr>
          <td><%= member.first_name %></td>
          <td><%= member.last_name %></td>
          <td><%= member.city %></td>
          <td><%= member.state %></td>
          <td><%= member.country %></td>
          <td><%= link_to 'Show', member_path(member), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_member_path(member), class: 'btn btn-secondary' %></td>
          <td><%= button_to 'Destroy', member_path(member), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Member', new_member_path, class: 'btn btn-success' %>
</div>
