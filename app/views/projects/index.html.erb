<div class="container">
  <h1>Projects</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= project.name %></td>
          <td><%= link_to 'Show', project_path(project), class: 'btn btn-primary' %></td>
          <td><%= link_to 'Edit', edit_project_path(project), class: 'btn btn-secondary' %></td>
          <td><%= link_to 'Destroy', project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'New Project', new_project_path, class: 'btn btn-success' %>
</div>
